<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.NoActionBar">
        <!-- Primary theme color of the app (sets background color of app bar) -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <!-- Background color of buttons in the app -->
        <item name="colorButtonNormal">@color/colorButtonNormal</item>
        <!-- Primary Dark theme color of the app (sets background color of action bar) -->
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
    </style>

    <style name="dice">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
    </style>

    <style name="dice_land">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:paddingLeft">@dimen/margin</item>
        <item name="android:paddingRight">@dimen/margin</item>
    </style>

    <style name="teams">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/margin</item>
        <item name="android:fontFamily">casual</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:textColor">@color/teamName</item>
        <item name="android:textSize">@dimen/teamTextSize</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="scores">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">casual</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:text">@string/_0</item>
        <item name="android:textColor">@color/score</item>
        <item name="android:textSize">@dimen/scoreTextSize</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="buttons">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">@dimen/marginButtonHorizontal</item>
        <item name="android:layout_marginRight">@dimen/marginButtonHorizontal</item>
        <item name="android:layout_marginTop">@dimen/marginButtonVertical</item>
        <item name="android:layout_marginBottom">@dimen/marginButtonVertical</item>
        <item name="android:translationZ">@dimen/shadow</item>
        <item name="android:textSize">@dimen/buttonTextSize</item>
        <item name="android:textStyle">bold</item>
        <item name="android:fontFamily">casual</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="buttons_land">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">@dimen/marginButtonHorizontalLand</item>
        <item name="android:layout_marginRight">@dimen/marginButtonHorizontalLand</item>
        <item name="android:layout_marginTop">@dimen/marginButtonVertical</item>
        <item name="android:layout_marginBottom">@dimen/marginButtonVertical</item>
        <item name="android:translationZ">@dimen/shadow</item>
        <item name="android:textSize">@dimen/buttonTextSize</item>
        <item name="android:textStyle">bold</item>
        <item name="android:fontFamily">casual</item>
        <item name="android:textAllCaps">false</item>
    </style>
</resources>
